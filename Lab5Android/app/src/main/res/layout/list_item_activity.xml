<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/cityTextView"
        android:layout_toEndOf="@+id/sprayCanTextView"
        android:layout_alignBottom="@+id/sprayCanTextView"
        android:id="@+id/recievedSprayCan" />

    <TextView
        android:text="City"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/cityTextView"
        android:textAlignment="center"
        android:layout_below="@+id/tagNameTextView"
        android:layout_alignStart="@+id/tagNameTextView" />

    <TextView
        android:text="Tag Name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/tagNameTextView"
        android:layout_marginTop="138dp"
        android:textAlignment="center"
        android:layout_marginStart="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/saveChangesButton"
        android:layout_below="@+id/sprayCanTextView"
        android:layout_alignStart="@+id/sprayCanTextView" />

    <TextView
        android:text="Spray Can"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/sprayCanTextView"
        android:textAlignment="center"
        android:layout_below="@+id/cityTextView"
        android:layout_alignStart="@+id/cityTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/recievedTagName"
        android:layout_above="@+id/recievedCity"
        android:layout_toEndOf="@+id/cityTextView"
        android:layout_alignTop="@+id/tagNameTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/recievedCity"
        android:layout_alignBottom="@+id/cityTextView"
        android:layout_toEndOf="@+id/cityTextView"
        android:layout_below="@+id/tagNameTextView" />

    <Button
        android:text="Show Chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showChartButton"
        android:layout_alignBaseline="@+id/deleteItemButton"
        android:layout_alignBottom="@+id/deleteItemButton"
        android:layout_alignEnd="@+id/recievedSprayCan" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteItemButton"
        android:layout_alignBaseline="@+id/saveChangesButton"
        android:layout_alignBottom="@+id/saveChangesButton"
        android:layout_toEndOf="@+id/sprayCanTextView" />
</RelativeLayout>